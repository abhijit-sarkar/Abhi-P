<h2>Create New Plan</h2>
<table class = "table">
   
<%= form_for @plan do |f| %>
  
   
   <tbody>
      <tr>
         <th>Plan No :</td>
         <td><%= f.text_field :plan_no %></td>
      </tr>
      
      <tr>
         <th>Plan Name :</th>
         <td><%= f.text_field :plan_name %></td>
      </tr>
<tr>
         <th>Company :</th>
         <td><%= f.text_field :company_name %></td>
      </tr>
<tr>
         <th>Duration(in days) :</th>
         <td><%= f.text_field :duration %></td>
      </tr>
<tr>
         <th>Bonus(%) :</th>
         <td><%= f.text_field :bonus %></td>
      </tr>
<tr>
         <th>Rate of Interest(%) :</th>
         <td><%= f.text_field :roi %></td>
      </tr>
   </tbody>
	
</table>
<%= f.submit class:"btn btn-primary btn-md" %>
<br><br><br>
<% end %>