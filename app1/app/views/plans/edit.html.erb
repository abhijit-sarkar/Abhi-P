<html>
<head>

</head>
<body>
<h2>Edit Plan</h2>
<table class = "table">
 <% if @plan.errors.any? %>
<ul>
	<% @plan.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
</ul>
<% end %>  
<%= form_for @plan do |f| %>
  
   
   <tbody>
      <tr>
         <th>Plan No :</td>
         <td><%= f.text_field :plan_no,class:"form-control",disabled:true %></td>
      </tr>
      
      <tr>
         <th>Plan Name :</th>
         <td><%= f.text_field :plan_name ,class:"form-control" %></td>
      </tr>
<tr>
         <th>Company :</th>
         <td><%= f.text_field :company_name,class:"form-control" %></td>
      </tr>
<tr>
         <th>Duration(in days) :</th>
         <td><%= f.text_field :duration ,class:"form-control",disabled:true %></td>
      </tr>
<tr>
         <th>Bonus(%) :</th>
         <td><%= f.text_field :bonus ,class:"form-control" %></td>
      </tr>
<tr>
         <th>Rate of Interest(%) :</th>
         <td><%= f.text_field :roi ,class:"form-control" %></td>
      </tr>
   </tbody>
	
</table>
<%= f.submit class:"btn btn-primary btn-md"%>
<br><br><br>
<% end %>
</body>
</html>